{
  "name": "blog",
  "version": "1.0.0",
  "description": "A Blog System from web using Angular6 and Webpack4",
  "main": "index.js",
  "scripts": {
    "dev": "rimraf dist && cross-env NODE_ENV=dev  webpack",
    "prod": "rimraf dist && cross-env NODE_ENV=prod  webpack --progress --profile --trace-deprecation",
    "build": "npm run dev",
    "css": "rimraf dist && cross-env NODE_ENV=dev webpack --config ./config/webpack.css.js --progrss",
    "start": "rimraf dist && cross-env NODE_ENV=dev webpack-dev-server",
    "test": "rimraf dist && cross-env NODE_ENV=test  webpack",
    "testServer": "rimraf dist && cross-env NODE_ENV=test  webpack-dev-server --config ./config/webpack.test.js"
  },
  "keywords": [
    "angular6",
    "webpack4",
    "typescript",
    "rxjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^6.1.2",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "~6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@types/lodash": "^4.14.116",
    "core-js": "^2.5.7",
    "font-awesome": "^4.7.0",
    "fontawesome": "^4.7.2",
    "github-markdown-css": "^2.10.0",
    "markdown-it": "^8.4.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-highlightjs": "^3.0.0",
    "markdown-it-ins": "^2.0.0",
    "markdown-it-mark": "^2.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "rxjs": "^6.2.2",
    "simplemde": "^1.11.2",
    "zone.js": "^0.8.26"
  },
